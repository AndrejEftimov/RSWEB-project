@model IEnumerable<Course>

@{
    ViewData["Title"] = "TeacherIndex";
    Layout = "_NonAdminLayout";
}

<form asp-controller="Course" asp-action="Index" method="get" style="margin-bottom: 16px; margin-left: 3%; width: 44%; display: inline-block; visibility: hidden;">
    <input class="input-global" type="text" name="CourseName" placeholder=" Course" />
    <input class="input-global" type="submit" value="Search" />
</form>

<div class="text-center" style="display: inline-block;">
    <p style="font-size: 19px;">Courses teaching:</p>
</div>

<div style="display: inline-block; float: right; margin-right: 10%;">
    <a class="btn btn-primary" asp-controller="Teacher" asp-action="TeacherLogin">BACK</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-borderless table-hover-custom">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Credits)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Semester)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Programme)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => c.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(model => c.Credits)
                    </td>
                    <td>
                        @Html.DisplayFor(model => c.Semester)
                    </td>
                    <td>
                        @Html.DisplayFor(model => c.Programme)
                    </td>
                    <td>
                        <a asp-controller="Enrollment" asp-action="TeacherCourseIndex" asp-route-CourseId="@c.Id"
                           asp-route-Year="" asp-route-TeacherId="@ViewData["TeacherId"]">
                            View Students &raquo;
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>