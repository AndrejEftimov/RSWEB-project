@model IEnumerable<Course>

@{
    ViewData["Title"] = "Index";
    ViewData["CurrentPage"] = "Courses";
}

<form asp-controller="Course" asp-action="Index" method="get" style="margin-bottom: 16px; margin-left: 3%; width: 44%; display: inline-block;">
    <input class="input-global" type="text" name="teacherString" placeholder="Teacher or TeacherID" />
    <input class="input-global" type="text" name="SearchString" placeholder="Title or Semester or Programme" style="width: 28%;">
    <input class="input-global" type="submit" value="Search" />
</form>

<a style="display: inline-block; font-size: 18px;" asp-action="Create">Add new entry</a>

<div class="table-responsive">
    <table class="table table-striped table-borderless">
        <thead class="thead-dark">
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSort"]">
                        @Html.DisplayNameFor(model => model.Title)
                    </a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["CreditsSort"]">
                        @Html.DisplayNameFor(model => model.Credits)
                    </a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["SemesterSort"]">
                        @Html.DisplayNameFor(model => model.Semester)
                    </a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["ProgrammeSort"]">
                        @Html.DisplayNameFor(model => model.Programme)
                    </a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["LevelSort"]">
                        @Html.DisplayNameFor(model => model.EducationLevel)
                    </a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["FTidSort"]">
                        @Html.DisplayName("First Teacher")
                    </a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["STidSort"]">
                        @Html.DisplayName("Second Teacher")
                    </a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Credits)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Semester)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Programme)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EducationLevel)
                    </td>
                    <td>
                        <a asp-controller="Teacher" asp-action="Details" asp-route-id="@item.FirstTeacherId">
                            @Html.DisplayFor(modelItem => item.Teacher1.FullName)
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Teacher" asp-action="Details" asp-route-id="@item.SecondTeacherId">

                            @Html.DisplayFor(modelItem => item.Teacher2.FullName)
                        </a>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">View Details &raquo; </a>
                    </td>
                </tr>
                }
        </tbody>
    </table>
</div>