@model EnrollmentsViewModel

@{
    ViewData["Title"] = "AdminCreate";
}

<div style="text-align: center;">
    <a class="btn btn-primary" asp-action="Index">BACK</a>
</div>

<hr />

<form asp-action="AdminCreate" style="width: 25%; margin: auto;">
    <div class="form-group">
        <label asp-for="CourseId" class="control-label">Course</label>
        <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseIds">
            <option value="" disabled selected></option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="StudentIds" class="control-label">Students</label>
        <select asp-for="StudentIds" class="form-control js-example-basic-multiple" multiple="multiple" asp-items="ViewBag.StudentIds">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Semester" class="control-label"></label>
        <input asp-for="Semester" class="form-control" />
        <span asp-validation-for="Semester" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year" class="control-label"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Enrollments" class="btn btn-success" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/lib/select2/js/select2.js"></script>
    <link href="~/lib/select2/css/select2.css" rel="stylesheet" />

    <script type="text/javascript">
        $(document).ready(function () {
            $('.js-example-basic-multiple').select2();
        });
    </script>
}
