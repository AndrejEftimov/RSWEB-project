@model Student

@{
    ViewData["Title"] = "Create";
}

<div style="text-align: center;">
    <a class="btn btn-primary" asp-action="Index">BACK</a>
</div>

<hr />

<form asp-action="Create" style="width: 25%; margin: auto;">
    <div class="form-group">
        <label asp-for="StudentId" class="control-label"></label>
        <input asp-for="StudentId" class="form-control" />
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EnrollmentDate" class="control-label"></label>
        <input asp-for="EnrollmentDate" class="form-control" />
        <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AcquiredCredits" class="control-label"></label>
        <input asp-for="AcquiredCredits" class="form-control" />
        <span asp-validation-for="AcquiredCredits" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CurrentSemestar" class="control-label"></label>
        <input asp-for="CurrentSemestar" class="form-control" />
        <span asp-validation-for="CurrentSemestar" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EducationLevel" class="control-label"></label>
        <input asp-for="EducationLevel" class="form-control" />
        <span asp-validation-for="EducationLevel" class="text-danger"></span>
    </div>
    <div>
        <input type="submit" value="Add Student" class="btn btn-success" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
